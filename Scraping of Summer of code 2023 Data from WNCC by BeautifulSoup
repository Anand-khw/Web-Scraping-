# For Project,Link
import pandas as pd
from bs4 import BeautifulSoup
import requests
data=[]
url="https://shiveshcodes.github.io/wncc-soc.github.io/soc/"
page1=requests.get(url).text
soup=BeautifulSoup(page1,'lxml')
# printhttps://shiveshcodes.github.io(,page1)
project = soup.find_all('div',class_='rounded hover-wrapper pr-3 pl-3 pt-3 pb-3 bg-white')
x=1
for links in project:
    link={}
    info = links.a['href']
    link['SNo.']=x
    link['Project']=links.find('p',class_='lead text-center font-weight-bold text-dark').text
    link['Link']="https://shiveshcodes.github.io"+info
    x+=1
    data.append(link)
df=pd.DataFrame(data)
df.to_csv('soc1.csv',index=False)
df


#For Project,Mentors,No. of Mentees,Link
import pandas as pd
from bs4 import BeautifulSoup
import requests

url="https://shiveshcodes.github.io/wncc-soc.github.io/soc/"
page1=requests.get(url).text
soup=BeautifulSoup(page1,'lxml')
# printhttps://shiveshcodes.github.io(,page1)
project = soup.find_all('div',class_='rounded hover-wrapper pr-3 pl-3 pt-3 pb-3 bg-white')
link=[]
x=1
for links in project:
    info = links.a['href']
    detail="https://shiveshcodes.github.io"+info
    # print(detail)
    page2 = requests.get(detail).text
    soup2 = BeautifulSoup(page2,'lxml')
    # print(soup2)
    project_info = soup2.find_all('div',class_='col-sm-10 col-md-8')
    # print(project)
    # x=1
    for info in project_info:
        table={}
        table['S.No.'] = x
        table['Project']=info.h2.text
        first_tag = info.find('p',class_='lead')
        table['Mentors'] = first_tag.text
        no_tag = info.ul
        table['No. of Mentees'] = no_tag.next_sibling.next_sibling.string
        # run_tag = info.find['p',class_='lead']
        # table['Mentees'] = run_tag.next_sibling.next_sibling.next_sibling.text
        table['Link']=detail
        x+=1
        link.append(table)
df = pd.DataFrame(link)
df.to_csv('soc2.csv',index=False)
df
